<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.furnycrew.furnidream.salesmanagement.model.dao.SalesMngMapper">
    <resultMap id="salesDtoMap" type="com.furnycrew.furnidream.order.model.dto.OrderDto">
        <id column="order_code" property="orderCode"/>
        <result column="customer_id" property="customerId"/>
        <result column="created_at" property="createdAt"/>
        <result column="phone" property="phone"/>
        <result column="shipping_address" property="shippingAddress"/>
        <result column="order_status" property="orderStatus"/>
        <result column="tracking_number" property="trackingNumber"/>
        <result column="total_price" property="totalPrice"/>

        <collection property="orderProductList" ofType="orderProductDto">
            <id column="order_code" property="orderCode"/>
            <id column="product_id" property="productId"/>
            <result column="quantity" property="quantity"/>
            <result column="price" property="price"/>

            <association property="product" javaType="productDto">
                <id column="product_id" property="productId"/>
                <result column="product_name" property="productName"/>
                <result column="product_image" property="productImage"/>
                <result column="category" property="category"/>
                <result column="cost_rice" property="costPrice"/>
                <result column="retail_price" property="retailPrice"/>
                <result column="stock" property="stock"/>
                <result column="description" property="description"/>
                <result column="product_code" property="productCode"/>
                <result column="discount_rate" property="discountRate"/>
                <result column="shipping_fee" property="shippingFee"/>
                <result column="product_status" property="productStatus"/>
                <result column="color" property="color"/>
                <result column="size" property="size"/>
                <result column="size" property="size"/>
            </association>
            <association property="OrderCanceledDto" javaType="orderCanceledDto">
                <id column="order_code" property="orderCode"/>
                <result column="created_at" property="createdAt"/>
                <result column="refund_amount" property="refundAmount"/>
            </association>
        </collection>
    </resultMap>


    <select id="findTotalSales" resultMap="salesDtoMap">
        select
            date_format(o.created_at, '%Y-%m-%d') 주문일자,
            sum(op.quantity) 주문건수,
            sum(op.quantity * op.price) 결제금액,
            ifnull(sum(oc.refund_amount), 0) 환불합계,
            sum(op.quantity * op.price) - ifnull(sum(oc.refund_amount), 0) 매출합계
        from
            tbl_order o
                left join tbl_order_product op
            using (order_code)
                left join tbl_order_canceled oc using (order_code)
            group by
                date_format(created_at, '%Y-%m-%d')
        order by 주문일자;
    </select>

</mapper>